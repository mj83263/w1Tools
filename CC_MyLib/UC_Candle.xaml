<UserControl x:Class="CC_MyLib.UC_Candle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CC_MyLib"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="100">
    <Canvas>
        <Path Stroke="Black" StrokeThickness="0" Fill="Blue">
            <Path.Data>
                <CombinedGeometry>
                    <CombinedGeometry.Geometry1>
                        <RectangleGeometry >
                            <RectangleGeometry.Rect>
                                <Rect ></Rect>
                            </RectangleGeometry.Rect>
                        </RectangleGeometry>

                    </CombinedGeometry.Geometry1>
                    <CombinedGeometry.Geometry2>
                        <RectangleGeometry Rect="50,50 100,100" RadiusX="20" RadiusY="20"/>
                    </CombinedGeometry.Geometry2>
                    
                </CombinedGeometry>
            </Path.Data>
        </Path>
    </Canvas>
</UserControl>
