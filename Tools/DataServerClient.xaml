<Page x:Class="Tools.DataServerClient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tools"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DataServerClient">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <AccessText Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="DemiBold"  FontSize="25">数据服务器客户端</AccessText>
        <DockPanel Grid.Row="1" Background="AliceBlue" VerticalAlignment="Center" LastChildFill="False">
            <AccessText Margin="10" VerticalAlignment="Center">Ip地址:</AccessText>
            <TextBox Margin="2" Width="300" VerticalAlignment="Center" Name="Tb_Ip">127.0.0.1</TextBox>
            <AccessText Margin="10" VerticalAlignment="Center">端口:</AccessText>
            <TextBox Margin="2" Width="100" VerticalAlignment="Center" Name="Tb_Prot">340120</TextBox>
            <Button Margin="10"  Width="75">发送</Button>
        </DockPanel>
        <DockPanel Grid.Row="2" Background="Aqua"  >

        </DockPanel>
    </Grid>
</Page>
